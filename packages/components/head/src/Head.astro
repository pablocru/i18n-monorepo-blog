---
import { SeoTags, type SeoTagsProps } from "@components/seo-tags";

export interface Props extends SeoTagsProps {
  faviconPath: string;
  pageTitle: string;
}

const { faviconPath, pageTitle, seoDescription, seoTitle } = Astro.props;
---

<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href={faviconPath} />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />
  <title>{pageTitle}</title>
  <SeoTags seoDescription={seoDescription} seoTitle={seoTitle} />
</head>
