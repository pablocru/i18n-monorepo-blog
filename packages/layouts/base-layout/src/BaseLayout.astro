---
import "./fonts.css";
import { Head as HeadComp, type HeadProps } from "@components/head";

interface Props extends HeadProps {
  pageLang: string;
}

const { faviconPath, pageLang, pageTitle, seoDescription, seoTitle } = Astro.props;
---

<html lang={pageLang}>
  <HeadComp
    faviconPath={faviconPath}
    pageTitle={pageTitle}
    seoDescription={seoDescription}
    seoTitle={seoTitle}
  />
  <body>
    <slot />
  </body>
</html>
