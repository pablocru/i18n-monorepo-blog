---
import { BaseLayout as BaseLayoutComp } from "@layouts/base-layout";

interface Props {
  pageTitle?: string;
  seoTitle?: string;
  seoDescription?: string;
}

const { pageTitle = "Blog en castellano", seoDescription, seoTitle } = Astro.props;
---

<BaseLayoutComp
  faviconPath="/favicon.svg"
  pageLang="es"
  pageTitle={pageTitle}
  seoDescription={seoDescription ? seoDescription : pageTitle}
  seoTitle={seoTitle ? seoTitle : pageTitle}
>
  <slot />
</BaseLayoutComp>
