---
import { BaseLayout as BaseLayoutComp } from "@layouts/base-layout";

interface Props {
  pageTitle?: string;
  seoTitle?: string;
  seoDescription?: string;
}

const { pageTitle = "Blog en castellano", seoDescription, seoTitle } = Astro.props;
---

<BaseLayoutComp
  pageLang="es"
  pageTitle={pageTitle}
  seoDescription={seoDescription || pageTitle}
  seoTitle={seoTitle || pageTitle}
>
  <Fragment slot="head-expander">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </Fragment>
  <slot />
</BaseLayoutComp>
