---
import "./fonts.css";
import { SeoTags, type SeoTagsProps } from "@components/seo-tags";

export interface Props extends SeoTagsProps {
  pageLang: string;
  pageTitle: string;
}

const { pageLang, pageTitle, seoDescription, seoTitle } = Astro.props;
---

<html lang={pageLang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <SeoTags seoDescription={seoDescription} seoTitle={seoTitle} />

    {
      /*
      Any head tag can be added using Astros's Named Slots:
      https://docs.astro.build/en/basics/astro-components/#named-slots
      */
    }
    <slot name="head-expander" />

    {/* Identify Astro and its version as the framework used to generate this site */}
    <meta name="generator" content={Astro.generator} />
  </head>
  <body>
    <slot />
  </body>
</html>
